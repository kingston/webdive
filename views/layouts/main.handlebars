<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Web Dive: {{title}}</title>
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
</head>
<body>

    <div id="content">
      <h1 class="title">{{className}}</h1>
      <ol class="breadcrumb">
        {{#breadcrumbs}}
        <li><a href="{{url}}" class="{{isActive}}">{{name}}</a></li>
        {{/breadcrumbs}}
      </ol>
      <div class="section">
        <h1 class="section-title">{{lessonName}}</h1>
        {{{body}}}
        <h2>All Done?</h2>
        {{#if nextLink}}
          <a href="{{nextLink}}" class="btn btn-primary">Continue</a>
        {{else}}
          <p>Well, that&apos;s all folks</p>
        {{/if}}
      </div>
    </div>

</body>
<script src="/javascripts/jquery.min.js"></script>
<script src="/javascripts/bootstrap.min.js"></script>
<script src="https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js?skin=sunburst&autoload=false&callback=prettyLoaded"></script>
<script src="/javascripts/app.js"></script>
</html>
